{% from "macros/og.njk" import ogSite %}
{% from "macros/twitter.njk" import twitterSite %}

{% set pageTitle = metadata.siteName %}
{% set pageDesc = "Online home of Shubhojyoti Bhattacharya - Son, Husband and Nerd. Web developer thoughts and travels." %}
{% set featuredImage =  metadata.featuredImageSite %}
{% set featuredImageDesc =  "Photo by Shubho.dev - Scenic Panorama at Donna Paula Beach Goa" %}

{% extends "layout.njk" %}

{% block pagemeta %}
    <title>{{ pageTitle }}</title>
    <link rel="canonical" href="{{ metadata.siteUrl }}">
    <meta name="description" content="{{ pageDesc }}">
    <meta name="keywords" content="shubhojyoti, bhattacharya, blog, homepage, webdev">
    <meta name="author" content="{{ author.firstName }} {{ author.lastName }}">
    <meta name="copyright" content="{{ author.firstName }} {{ author.lastName }}">
    {{ ogSite(metadata.siteUrl | url, pageTitle, author.firstName | concatString(author.lastName, " "), pageDesc, featuredImage, featuredImageDesc) }}
    {{ twitterSite(metadata.twitterProfile, metadata.siteUrl | url, pageTitle, pageDesc, featuredImage, featuredImageDesc) }}
{% endblock %}

