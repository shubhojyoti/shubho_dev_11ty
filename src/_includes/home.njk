            <h2 class="author-name">
                <span class="firstname block uppercase font-bold">{{ author.firstName }}</span>
                <span class="lastname block capitalize font-light">{{ author.lastName }}</span>
            </h2>
            {% if author.description %}
            <p class="para">
                {% for intro in author.description %}
                <span class="intro-text">{{ intro }}</span>
